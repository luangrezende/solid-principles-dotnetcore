@model SOLID.Presentation.Models.DepositarModel
@{
    ViewData["Title"] = "Caixa Eletronico";
}

    <div class="row">
        <div class="col-6">
            <h1>Caixa Eletronico</h1>
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("Depositar", "Home", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.DropDownList("TipoTransacao_ID", new SelectList(ViewBag.TiposTransacoes, "ID", "Descricao"), "-- Selecione --", htmlAttributes: new { @class = "form-control", @Required = "True" })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(md => md.Valor,  new { htmlAttributes = new { @class = "form-control required", @Required = "True" } })
                        </div>
                        <button type="submit" class="btn btn-primary">Depositar</button>
                    }
                </div>
            </div>
        </div>
    </div>
