@model SOLID.Services.Models.TransationModel
@{
    ViewData["Title"] = "Caixa Eletronico";
}

    <div class="row">
        <div class="col-4">
            <h1>Depositar</h1>
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("Deposit", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.DropDownList("Account_ID", ViewBag.Accounts, "-- Selecione --", htmlAttributes: new { @class = "form-control", @Required = "True" })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(md => md.Value, new { htmlAttributes = new { @class = "form-control required", @Required = "True" } })
                        </div>
                        <button type="submit" class="btn btn-primary">Depositar</button>
                    }
                </div>
            </div>
        </div>

        <div class="col-4">
            <h1>Sacar</h1>
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("Sacar", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.DropDownList("Account_ID", ViewBag.Accounts, "-- Selecione --", htmlAttributes: new { @class = "form-control", @Required = "True" })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(md => md.Value, new { htmlAttributes = new { @class = "form-control required", @Required = "True" } })
                        </div>
                        <button type="submit" class="btn btn-primary">Sacar</button>
                    }
                </div>
            </div>
        </div>
    </div>
